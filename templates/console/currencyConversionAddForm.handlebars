<form data-action="submit-conversion">
    <div class="form-row">
        <div class="col">
            <input name="symbol" type="text" class="form-control" value="" placeholder="Symbol" required>
        </div>
        <div class="col">
            <input name="value" type="number" step="0.01" min="0" class="form-control" value="" placeholder="Value" required>
        </div>
        <div class="col">
            <div class="input-group-append">
                <button class="btn btn-success" type="submit"><i class="fas fa-check"></i></button>
                <a href="#" class="btn btn-danger" data-action="add-conversion-cancel"><i class="fas fa-times"></i></a>
            </div>
        </div>
    </div>
</form>