<div class="card mb-4">
    <div class="card-header">
        Portfolio Allocations
    </div>
    <div class="card-body">
        {{#if items.length}}
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th scope="col">Category</th>
                        <th scope="col">Value</th>
                        <th scope="col">% Portfolio</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                    <tr>
                        <td>{{category}}</td>
                        <td>${{value}}</td>
                        <td>{{percentage}}%</td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr>
                        <th>Total</th>
                        <th>${{total}}</th>
                        <th>100%</th>
                    </tr>
                </tfoot>
            </table>
        {{else}}
            <div class="text-center"><em>- empty -</em></div>
        {{/if}}
    </div>
</div>
