<div class="card mb-4">
    <div class="card-header">
        Currency Multipliers
    </div>
    <div class="card-body">
        {{#if this.length}}
            <table class="table table-sm mb-0">
                <thead>
                    <tr>
                        <th scope="col">Code</th>
                        <th scope="col">Multiplier</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody data-outlet="list"></tbody>
            </table>
        {{else}}
            <div class="text-center my-4"><em>- empty -</em></div>
        {{/if}}
    </div>
</div>