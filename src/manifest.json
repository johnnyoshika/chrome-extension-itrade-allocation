{
  "manifest_version": 2,
  "name": "Portfolio Insight",
  "description": "Calculate portfolio allocations.",
  "version": "1.0",
  "author": "Johnny Oshika",
  "permissions": [
    "declarativeContent",
    "activeTab",
    "storage",
    "downloads"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "images/pi16.png",
      "32": "images/pi32.png",
      "48": "images/pi48.png",
      "128": "images/pi128.png"
    }
  },
  "options_page": "pages/dashboard.html",
  "icons": {
    "16": "images/pi16.png",
    "32": "images/pi32.png",
    "48": "images/pi48.png",
    "128": "images/pi128.png"
  }
}