{
  "manifest_version": 2,
  "name": "Scotia iTrade Portfolio Allocation",
  "description": "Calculate portfolio allocation at Scotia iTrade.",
  "version": "1.0",
  "author": "Johnny Oshika",
  "permissions": [
    "declarativeContent",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "images/scotia16.png",
      "32": "images/scotia32.png",
      "48": "images/scotia48.png",
      "128": "images/scotia128.png"
    }
  },
  "options_page": "pages/options.html",
  "icons": {
    "16": "images/scotia16.png",
    "32": "images/scotia32.png",
    "48": "images/scotia48.png",
    "128": "images/scotia128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}